---
import Layout from '../layouts/Layout.astro';
 

const Contactos =[
	{
	nombre: ' Urb el Recreo - Residencial Maria Auxiliadora',
	link:"https://bit.ly/ResidencialMariaAuxiliadora-UrbElRecreo",
	},
	{
	nombre: 'Residencial Heredia de San Andr√©s',
	link:"https://bit.ly/Residencial-Heredia-De-San-%C3%81ndres",
	},
	 
	
]
---

<Layout title="Roden contacto">
	<main class="flex flex-col w-screen h-screen justify-center items-center shadow-md space-y-3 bg-[#075fa5]">
		<div class="shadow-md mx-auto text-center space-y-6 p-5" >
			<img src="/Logo.svg" alt="Logo" width="150" height="40" class="mx-auto object-cover">

			<div class="grid grid-cols-1 justify-center items-center    gap-4 ">
				{Contactos.map((contacto) => (
					
					// Generar un enlace para cada contacto
					<a href={contacto.link} class="bg-white p-4 rounded-lg uppercase shadow-md text-center text-blue-500 hover:bg-blue-500 hover:text-white">
						{contacto.nombre}
					</a>
				))}
	
	
			</div>
	
			<h1 class="uppercase text-xl text-white font-medium ">Reden constructores</h1>	
		</div>
	</main>
</Layout>
